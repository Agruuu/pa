<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.orhon.pa.modules.opa.dao.OpaSummaryDao">
      <select id="get" resultType="OpaSummary">
         SELECT
            summary_id,
                 value,
                  label 
         from opa_summary_table 
         WHERE value=#{value}
      </select>
      
      <select id="entity" resultType="OpaSummary">
         SELECT 
            summary_id,
                value,
                label
          FROM opa_summary-table
      </select>
  
  </mapper>